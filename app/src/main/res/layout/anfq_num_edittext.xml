<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyht_white_item_color"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@null"
        android:gravity="top"
        android:textColor="@color/cyht_content_color"
        android:textSize="@dimen/cyht_edit_content_size"
        android:hint="请输入内容"
        android:minHeight="@dimen/suggest_min_height"
        android:padding="@dimen/medium_spacing"
        android:scrollbars="vertical"
        android:singleLine="false" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etContent"
        android:gravity="right"
        android:paddingRight="@dimen/medium_spacing"
        android:paddingBottom="@dimen/medium_spacing"
        android:text="100"
        android:textColor="@color/cyht_prompt_text_color"/>

    <View
        android:id="@+id/vLine"
        android:background="@color/cyht_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>