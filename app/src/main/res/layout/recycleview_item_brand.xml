<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_item"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/brand_icon_width"
            android:layout_height="@dimen/brand_icon_height"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/tv_item"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/brand_item_height"
            android:gravity="center_vertical"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/line_color" />
</LinearLayout>