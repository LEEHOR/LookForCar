<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <com.cyht.wykc.widget.CircleImageView
                android:id="@+id/iv_pic_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_pic_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="6"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_history"
        android:background="@drawable/bg_fff_background"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/history" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="观看历史"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>

    <View style="@style/line_style"/>
    <LinearLayout
        android:id="@+id/ll_collection"
        android:background="@drawable/bg_fff_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/collection" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="我的收藏"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>
    <View style="@style/line_style"/>

    <RelativeLayout
        android:id="@+id/rl_letters"
        android:background="@drawable/bg_fff_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/letters" />

        <TextView
            android:id="@+id/tv_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_letters"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="我的消息"
            android:textColor="@color/textitem_textcolor" />

        <TextView
            android:id="@+id/tv_letters_count"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/material_white"
            android:background="@drawable/bg_letters_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View style="@style/line_style"/>


    <LinearLayout
        android:id="@+id/ll_downloadpath"
        android:background="@drawable/bg_fff_background"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/download" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="下载地址"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>
    <View style="@style/line_style"/>

    <LinearLayout
        android:id="@+id/ll_contract"
        android:background="@drawable/bg_fff_background"

        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/contract" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="联系我们"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>
    <View style="@style/line_style"/>

    <LinearLayout
        android:id="@+id/ll_Opinion"
        android:background="@drawable/bg_fff_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/opinion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="意见反馈"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>
    <View style="@style/line_style"/>



    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_fff_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageitem_padding_left"
            android:scaleType="centerCrop"
            android:src="@mipmap/setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textitem_padding_left"
            android:text="设置"
            android:textColor="@color/textitem_textcolor" />
    </LinearLayout>
</LinearLayout>
