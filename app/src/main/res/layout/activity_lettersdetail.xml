<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cyht.wykc.widget.MyTittleBar.NormalTittleBar
        android:id="@+id/tb_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_shape"
        app:layout_inflate="@layout/normal_leftback_tittle_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background">


        <TextView
            android:id="@+id/tv_letters_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="系统提醒:"
            android:textColor="#333"
            android:textSize="15dp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_letters_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignTop="@+id/tv_letters_tittle"-->
            <!--android:layout_marginRight="15dp" />-->

        <TextView
            android:id="@+id/tv_letters_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_letters_tittle"
            android:layout_below="@+id/tv_letters_tittle"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:singleLine="false"
            android:textColor="#666"
            android:textSize="13dp" />

        <View
            style="@style/line_style"
            android:layout_below="@+id/tv_letters_text" />
    </RelativeLayout>

</LinearLayout>